devops@ip-172-31-9-227:~$ ls
docker-image.yml  index.html  java-maven-improved.yml  java-maven.yml  nginx-role  role-playbook.yml  secrets.yml
devops@ip-172-31-9-227:~$ cat role-playbook.yml
---
- name: Install and configure Nginx
  hosts: ansiblegroup
  become: yes

  roles:
    - nginx-role

devops@ip-172-31-9-227:~$ cat nginx-role/tasks/main.yml
#SPDX-License-Identifier: MIT-0
---
# tasks file for nginx-role
#


- name: Install Nginx
  apt:
    name: nginx
    state: present
    update_cache: yes

- name: Ensure Nginx running
  service:
    name: nginx
    state: started
    enabled: yes

- name: Deploy custom index page
  copy:
    src: index.html
    dest: /var/www/html/index.html
  notify: restart nginx


devops@ip-172-31-9-227:~$ cat nginx-role/handlers/main.yml
#SPDX-License-Identifier: MIT-0
---
# handlers file for nginx-role
#
#

- name: restart nginx
  service:
    name: nginx
    state: restarted

devops@ip-172-31-9-227:~$

